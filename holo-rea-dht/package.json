{
  "name": "@holo-rea/dht",
  "version": "0.0.1",
  "description": "A Holochain app implementing a ValueFlows-compatible REA economic network",
  "main": "index.js",
  "scripts": {
    "dev": "npm-watch",
    "start": "hc run",
    "build": "hc package",
    "buildandrun": "hc package; hc run",
    "test": "cargo clippy; npm run build; tape test/*.js test/**/*.js"
  },
  "watch": {
    "buildandrun": {
      "patterns": [
        "core",
        "zomes"
      ],
      "extensions": "rs"
    },
    "test": {
      "patterns": [
        "test", "dist"
      ],
      "extensions": "js,json"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/holo-rea/holo-rea.git"
  },
  "keywords": [
    "REA",
    "ValueFlows",
    "OpenValueNetwork",
    "Open Value Network",
    "OVN",
    "Holochain",
    "economic",
    "coordination",
    "cooperative"
  ],
  "author": "Holo-REA contributors",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/holo-rea/holo-rea/issues"
  },
  "homepage": "https://github.com/holo-rea/holo-rea#readme",
  "devDependencies": {
    "@holochain/holochain-nodejs": "0.3.0",
    "json3": "^3.3.2",
    "npm-watch": "^0.6.0",
    "tape": "^4.9.2"
  }
}

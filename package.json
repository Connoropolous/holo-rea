{
  "name": "holo-rea",
  "private": true,
  "workspaces": [
    "holo-rea-dht"
  ],
  "version": "0.0.1",
  "description": "A ValueFlows / REA economic network grammar implementation built with Holochain & GraphQL",
  "main": "/dev/null",
  "scripts": {
    "postinstall": "scripts/postinstall.sh",
    "start": "npm run build; npm run dht",
    "build": "cd holo-rea-dht && hc package",
    "dht": "holochain -c ./conductor-config.toml",
    "dev": "npm-watch",
    "test": "cd holo-rea-dht && npm run test"
  },
  "watch": {
    "start": {
      "patterns": [
        "holo-rea-dht/core",
        "holo-rea-dht/zomes"
      ],
      "extensions": "rs"
    },
    "test": {
      "patterns": [
        "holo-rea-dht/test",
        "holo-rea-dht/dist"
      ],
      "extensions": "js,json"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/holo-rea/holo-rea.git"
  },
  "keywords": [
    "REA",
    "ValueFlows",
    "OpenValueNetwork",
    "Open Value Network",
    "OVN",
    "Holochain",
    "economic",
    "cooperative",
    "coordination"
  ],
  "author": "Holo-REA contributors",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/holo-rea/holo-rea/issues"
  },
  "homepage": "https://github.com/holo-rea/holo-rea#readme",
  "devDependencies": {
    "npm-watch": "^0.6.0"
  }
}
